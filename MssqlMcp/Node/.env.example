# SQL Server Connection Settings
SERVER_NAME=your-server.database.windows.net
DATABASE_NAME=your-database

# Authentication Method
# Options: azure-ad, sql, windows, windows-integrated
AUTH_METHOD=windows-integrated

# For SQL Authentication (AUTH_METHOD=sql)
# SQL_USERNAME=your-username
# SQL_PASSWORD=your-password

# For Windows Authentication (AUTH_METHOD=windows)
# DOMAIN=your-domain
# USERNAME=your-username
# PASSWORD=your-password

# Connection Options
ENCRYPT=false
TRUST_SERVER_CERTIFICATE=true
CONNECTION_TIMEOUT=30

# Server Mode
READONLY=false

# HTTP Server Settings (for network sharing)
HTTP_PORT=3000
HTTP_HOST=0.0.0.0
